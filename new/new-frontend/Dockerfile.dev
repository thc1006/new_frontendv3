# Use Node.js LTS Alpine image as base
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy dependency definitions
COPY package.json package-lock.json ./

# Install dependencies
RUN npm ci

# Copy all source files
COPY . .

# Expose Nuxt default dev port
EXPOSE 3000

# Set host and port environment variables for dev mode
ENV HOST=0.0.0.0
ENV PORT=3000

# Default command: start Nuxt in development mode
CMD ["npm", "run", "dev"]
